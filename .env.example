# Copy this file to .env and fill in your actual values

# Nodit API Configuration
NODIT_API_KEY=your-nodit-api-key-here
NODIT_BASE_URL=https://api.nodit.io

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Blockchain Configuration
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/your-api-key
POLYGON_RPC_URL=https://polygon-mainnet.alchemyapi.io/v2/your-api-key
ARBITRUM_RPC_URL=https://arb-mainnet.alchemyapi.io/v2/your-api-key
OPTIMISM_RPC_URL=https://opt-mainnet.alchemyapi.io/v2/your-api-key

# Smart Contract Addresses (Deploy these first)
VAULT_ADDRESS=0x1234567890123456789012345678901234567890
EXECUTOR_ADDRESS=0x1234567890123456789012345678901234567890

# Executor Wallet (AI Agent's wallet for executing transactions)
EXECUTOR_PRIVATE_KEY=your-executor-private-key-here

# Strategy Configuration
MIN_EVALUATION_INTERVAL=300000  # 5 minutes in milliseconds
MAX_GAS_PRICE=100              # Maximum gas price in gwei
MIN_TRANSACTION_VALUE=1000     # Minimum transaction value in USD
MAX_SLIPPAGE=1                 # Maximum slippage percentage

# Server Configuration
PORT=3001
LOG_LEVEL=info
NODE_ENV=production

# AI Configuration
AI_MODEL=gpt-4
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=2000
